<%= link_to("<< Back to List", events_path, :class => 'back-link') %>

<div class="Events new">
  <h2>Create Event</h2>

  <%= form_for(@event) do |f| %>

    <table summary="Event form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Place</th>
        <td><%= f.text_field(:place) %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= f.text_field(:description) %></td>
      </tr>
      <tr>
        <th>Start Time</th>
        <td><%= f.datetime_select :starttime, start_year: Time.now.year, ampm:true %></td>
      </tr>
       <tr>
        <th>End Time</th>
        <td><%= f.datetime_select :endtime, start_year: Time.now.year, ampm:true %></td>
      </tr>
      <tr>
        <th>Event Password</th>
        <td><%= f.text_field(:eventpass) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Event") %>
    </div>

  <% end %>
</div>
